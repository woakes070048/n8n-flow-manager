{
  "name": "{{ workflow_name }}",
  "active": {{ "true" if environment == "production" else "false" }},
  "nodes": [
    {
      "name": "Webhook",
      "type": "n8n-nodes-base.webhook",
      "position": [250, 300],
      "parameters": {
        "path": "{{ webhook_path }}",
        "httpMethod": "POST",
        "responseMode": "onReceived"
      },
      "webhookId": "{{ webhook_id }}",
      "typeVersion": 1
    },
    {
      "name": "Set",
      "type": "n8n-nodes-base.set",
      "position": [450, 300],
      "parameters": {
        "values": {
          "string": [
            {
              "name": "environment",
              "value": "{{ environment }}"
            },
            {
              "name": "timestamp",
              "value": "={{ $now }}"
            }
          ]
        }
      },
      "typeVersion": 1
    },
    {
      "name": "HTTP Request",
      "type": "n8n-nodes-base.httpRequest",
      "position": [650, 300],
      "parameters": {
        "url": "{{ api_endpoint }}",
        "method": "POST",
        "options": {
          "timeout": {{ request_timeout }}
        },
        "sendBody": true,
        "bodyParameters": {
          "parameters": [
            {
              "name": "data",
              "value": "={{ $json }}"
            }
          ]
        }
      },
      "typeVersion": 1
    }
  ],
  "connections": {
    "Webhook": {
      "main": [
        [
          {
            "node": "Set",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Set": {
      "main": [
        [
          {
            "node": "HTTP Request",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  },
  "settings": {
    "executionTimeout": {{ execution_timeout | default(300) }},
    "saveDataErrorExecution": "all",
    "saveDataSuccessExecution": "all"
  }
}
